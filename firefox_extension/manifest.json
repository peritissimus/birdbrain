{
  "manifest_version": 3,
  "name": "Birdbrain Sync",
  "version": "1.1",
  "description": "Syncs Twitter bookmarks to Birdbrain API",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["hook.js"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "birdbrain-sync@local",
      "strict_min_version": "109.0"
    }
  ]
}
